<% layout("/layouts/boilerplate.ejs") %>
<body>
  <br />
  <h3>Create New Listing :</h3>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-2">
          <label for="title" class="form-label">Title :</label>
          <input
            name="listing[title]"
            type="text"
            placeholder="Enter title"
            class="form-control"
            required
          />
          <div class="valid-feedback">title looks good</div>
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description :</label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">please enter short description</div>
        </div>

        <!-- Upload image box -->
        <div class="mb-2">
          <label for="image" class="form-label">Upload Listing Image:</label>
          <input name="listing[image]" type="file" class="form-control" required />
        </div>

        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Price :</label>
            <input
              name="listing[price]"
              placeholder="Enter Price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">please enter valid price</div>
          </div>
          <div class="mb-2 col-md-8">
            <label for="country" class="form-label">Country :</label>
            <input
              name="listing[country]"
              type="text"
              placeholder="Enter country"
              class="form-control"
              required
            />
          </div>
          <div class="invalid-feedback">please enter valid country name</div>
        </div>
        <div class="mb-2">
          <label for="location" class="form-label">Location :</label>
          <input
            name="listing[location]"
            type="text"
            placeholder="Enter location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please enter valid location</div>
        </div>
        <br />
        <button class="btn btn-primary">Add</button>
      </form>
    </div>
  </div>
  <br />
</body>
